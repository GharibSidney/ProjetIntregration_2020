@using ProjetIntegrationEquipe2.ViewModels.AjouterCours
@model AjouterCoursCreateVM

<h2 class="text-center m-3">Créer un cours</h2>

@using (Html.BeginForm("Create", "AjouterCours", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div>
        @Html.ValidationSummary()
    </div>

    <div class="form-group d-flex justify-content-center groupeInput">
        @Html.LabelFor(c => c.MatiereID, new { @class = "col-md-2 control-label font-weight-bold" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.MatiereID, Model.MatiereList.Select(x => new SelectListItem
       {
           Text = x.Nom,
           Value = x.MatiereId.ToString()
       }), "Choisir la matière", new { @class = "form-control chosen-select w-75" })
            @Html.ValidationMessageFor(m => m.MatiereID)
        </div>
    </div>

    <div class="form-group d-flex justify-content-center groupeInput">
        @Html.LabelFor(m => m.NumeroCours, new { @class = "col-md-2 control-label font-weight-bold" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NumeroCours, new { @class = "form-control w-75" })
            @Html.ValidationMessageFor(m => m.NumeroCours)
        </div>
    </div>

    <div class="form-group d-flex justify-content-center groupeInput">
        @Html.LabelFor(m => m.Nom, new { @class = "col-md-2 control-label font-weight-bold" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nom, new { @class = "form-control w-75" })
            @Html.ValidationMessageFor(m => m.Nom)
        </div>
    </div>



    <div class="text-center">
        <button type="submit" class="btn btn-primary m-1">Soumettre</button>
    </div>
}

<div class="text-center">
    <a href="~/Home/Index" class="btn btn-primary m-1">Retour à l'accueil</a>
</div>

@section css {
    @*Pour ne pas que la page vibre, à cause d'un scroll vertical !*@
    <link rel="stylesheet" href="~/Content/AjoutCours.css" />

    @*SelectionMatiere*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css" integrity="sha512-yVvxUQV0QESBt1SyZbNJMAwyKvFTLMyXSyBHDO4BG5t7k/Lw34tyqlSDlKIrIENIzCl+RVUNjmCPG+V/GMesRw==" crossorigin="anonymous" />
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @*SelectionMatiere*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js" integrity="sha512-rMGGF4wg1R73ehtnxXBt5mbUfN9JUJwbk21KMlnLZDJh7BkPmeovBuddZCENJddHYYMkCh9hPFnPmS9sspki8g==" crossorigin="anonymous"></script>

    <script>
        $('.chosen-select').chosen();
    </script>
}
