@using ProjetIntegrationEquipe2.ViewModels.Seances
@model SeanceCreateVM


    <h2 class="text-center m-1">Ajouter une séance</h2>


@using (Html.BeginForm("Create", "Seances", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group marginLeft">
        @Html.LabelFor(m => m.ListeTutores, new { @class = "col-md-2 control-label font-weight-bold" })
        <div class="col-md-9">
            @Html.DropDownListFor(m => m.TutoreId, Model.ListeTutores.Select(x => new SelectListItem
       {
           Text = x.Prenom + " " + x.Nom + " " + x.Email,
           Value = x.Id
       }), "Choisir le tutoré", new { @class = "form-control w-75 chosen-select" })
            @Html.ValidationMessageFor(m => m.TutoreId)
        </div>
    </div>

    <button type="button" class="boutonAjoutPlageHoraire btn bg-success" onclick="AddDP()">Ajouter une plage horaire</button>

    <div class="field-validation-error">
        @Html.ValidationSummary()
    </div>

    @Html.Partial("_PlageHoraire", Model)

    <div class="text-center p-2 m-4"> <button type="submit" id="leBouton" class="btn btn-primary">Soumettre</button></div>
}

